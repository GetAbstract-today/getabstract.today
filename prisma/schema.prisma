generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Url {
  id        String   @id @default(cuid())
  url       String
  date      DateTime
  category  String
  createdAt DateTime @default(now())
}

model Newsletter {
  id        String   @id @default(cuid())
  title     String?  // AI-generated email subject line
  content   String   // Full newsletter as Markdown
  category  String
  createdAt DateTime @default(now())
}

// One row per (email, category). One user can subscribe to many categories.
model Subscription {
  id        String   @id @default(cuid())
  email     String
  category  String   // Newsletter category id, e.g. "ai", "startups"
  createdAt DateTime @default(now())

  @@unique([email, category])
  @@index([email])
}
